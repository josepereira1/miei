header {
    /* background-color: red; */ 
    padding: 10px 10px 5px 10px;
}

nav {
    background-color: rgb(199, 199, 199);
    padding: 10px 10px 10px 0px;
    margin: 10px 10px 5px 10px;
}

aside {
    background-color: rgb(199, 199, 199);
    float: right;
    height: 35em;
    width: 20%;
    margin: 5px 10px;
    padding: 10px;
}

main {
    margin: 10px;   
}

footer {
    position: fixed;
    bottom: 0;
    width: 100%;
    /*padding: 5px;*/
    margin: 10px;
    background-color: rgb(199, 199, 199);
    text-align: center;
}

/* -------------------------- TEXTOS ------------------------ */

.larger-words{  /*  palavras de tamanho grande   */
    font-family: Helvetica;
    font-size: larger;
}

.medium-words{  /*  palavras de tamanho médio   */
    font-family: Helvetica;
    font-size: medium;
}

/* --------------------------------------------------------- */

/* ------------------------ NAV ---------------------------- */

.nav-bar{   /* não se aplicou o float à nav, pois o "User name" 
               tem que ficar à esquerda, logo dividiu-se */
    float: right;
}

.nav-button{    /* espaçar os botões da nav */ 
    margin: 0px 5px 0px 5px;
}

.nav-button:hover{  /* quando se passa o rato por cima, fica cinzento */
    background-color: grey;
    padding: 10px 0px 10px 0px;
}

.nav-button:visited{    /* para manter a cor dos botões, após serem carregados */
    color: blue;
}

/* --------------------------------------------------------- */

/* ------------------------ TABLE -------------------------- */

.col1 {
    padding: 5px 0px 5px 0px;
    width: 10%;
}

.col2 {
    padding: 5px 0px 5px 0px;
    width: 20%;
}

.col3 {
    padding: 5px 0px 5px 0px;
    width: 20%;
}

.row1{
    background-color: rgb(228, 228, 228);
    margin: 10px;
}

.border-table{
    border: 1px;
    border-style: solid;
    border-color:  rgb(199, 199, 199);;
}

table {
    padding: 10px;
    border: 5px;
    border-color: black;
    width: 77%;
}

.cell {
    padding: 5px 5px 5px 5px;
}

/* --------------------------------------------------------- */

.aside-buttons {
    width: 70%;
    margin: 5px;
}

.paginas {
    float: right;
    background-color: gainsboro;
    border-radius: 2px;
    margin: 15px 8px 3px 3px;
    padding: 5px;
    color: black;
    text-decoration: none; /* para tirar o underline do <a> */
}

@media only screen and (min-width: 1141px) {
    .filter-to-small-screens {
        display: none;
    }
}

@media only screen and (max-width: 1140px) {
    aside {
        display: none;
    }
    .aside-buttons {
        width: 15%;
    }

    table {
        width: 100%;
    }
}