<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Games</servlet-name>
        <servlet-class>wsdl.GamesWSDL</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>GamesWSDL</servlet-name>
        <servlet-class>wsdl.GamesWSDL</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>UsersWSDL</servlet-name>
        <servlet-class>wsdl.UsersWSDL</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Games</servlet-name>
        <url-pattern>/Games</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GamesWSDL</servlet-name>
        <url-pattern>/GamesWSDL</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsersWSDL</servlet-name>
        <url-pattern>/UsersWSDL</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>Login</welcome-file>
    </welcome-file-list>
    <ejb-local-ref>
        <ejb-ref-name>GameSessionBean</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local-home>beans.GameSessionBeanLocal</local-home>
        <local>beans.GameSessionBeanLocal</local>
        <ejb-link>GameSessionBean</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>PlatformSessionBean</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>beans.PlatformSessionBeanLocal</local>
        <ejb-link>PlatformSessionBean</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>UserSessionBean</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>beans.UserSessionBeanLocal</local>
        <ejb-link>UserSessionBean</ejb-link>
    </ejb-local-ref>
</web-app>
